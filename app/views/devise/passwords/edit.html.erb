<div class="auth-container">
  <div class="auth-card">
    <h1 class="auth-title">Reset Password</h1>
    <p class="auth-subtitle">Enter your new password</p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "auth-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "New Password", class: "form-label" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-input", required: true %>
        <span class="field-hint">Use 16+ characters, or 12+ with upper, lower, number, and symbol</span>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm New Password", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input", required: true %>
      </div>

      <div class="form-actions">
        <%= f.submit "Change Password", class: "btn btn-primary btn-lg", style: "width: 100%;" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
