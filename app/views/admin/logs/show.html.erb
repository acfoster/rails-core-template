<div class="dashboard-container">
  <div class="dashboard-header" style="display: flex; justify-content: space-between; align-items: center;">
    <div>
      <h1>Log Details</h1>
      <p>Detailed log entry information</p>
    </div>
    <%= link_to "â† Back to Logs", admin_logs_path, class: "btn btn-secondary" %>
  </div>

  <div class="card">
    <div class="card-header">
      <div style="display: flex; justify-content: space-between; align-items: flex-start;">
        <div>
          <h2>Log Entry #<%= @log.id %></h2>
          <p class="card-description">
            <%= @log.occurred_at.strftime("%B %d, %Y at %I:%M:%S %p") %>
          </p>
        </div>
        <div style="text-align: right; display: flex; gap: var(--space-sm);">
          <span class="badge <%= @log.level_badge_class %> badge-lg">
            <%= @log.level.upcase %>
          </span>
          <span class="badge <%= @log.type_badge_class %> badge-lg">
            <%= @log.log_type.titleize %>
          </span>
        </div>
      </div>
    </div>

    <div class="metadata-grid" style="margin-bottom: var(--space-xl);">
      <% if @log.user.present? %>
        <div class="metadata-item">
          <div class="metadata-label">User</div>
          <div class="metadata-value"><%= @log.user.email %></div>
        </div>
      <% end %>
      <% if @log.action.present? %>
        <div class="metadata-item">
          <div class="metadata-label">Action</div>
          <div class="metadata-value"><%= @log.action %></div>
        </div>
      <% end %>
      <% if @log.controller.present? %>
        <div class="metadata-item">
          <div class="metadata-label">Controller</div>
          <div class="metadata-value"><%= @log.controller %></div>
        </div>
      <% end %>
      <% if @log.request_id.present? %>
        <div class="metadata-item">
          <div class="metadata-label">Request ID</div>
          <div class="metadata-value" style="font-family: monospace; font-size: 0.875rem;"><%= @log.request_id %></div>
        </div>
      <% end %>
      <% if @log.ip_address.present? %>
        <div class="metadata-item">
          <div class="metadata-label">IP Address</div>
          <div class="metadata-value"><%= @log.ip_address %></div>
        </div>
      <% end %>
    </div>

    <div style="margin-bottom: var(--space-xl);">
      <h3 style="margin-bottom: var(--space-md);">Message</h3>
      <div style="background: var(--color-background); padding: var(--space-md); border-radius: var(--border-radius); border: 1px solid var(--color-border);">
        <pre style="margin: 0; white-space: pre-wrap; word-wrap: break-word; font-family: monospace; font-size: 0.875rem;"><%= @log.message %></pre>
      </div>
    </div>

    <% if @log.context.present? && @log.context.any? %>
      <div style="margin-bottom: var(--space-xl);">
        <h3 style="margin-bottom: var(--space-md);">Context</h3>
        <div style="background: var(--color-background); padding: var(--space-md); border-radius: var(--border-radius); border: 1px solid var(--color-border);">
          <pre style="margin: 0; white-space: pre-wrap; word-wrap: break-word; font-family: monospace; font-size: 0.875rem;"><%= JSON.pretty_generate(@log.context) %></pre>
        </div>
      </div>
    <% end %>

    <% if @log.metadata.present? && @log.metadata.any? %>
      <div style="margin-bottom: var(--space-xl);">
        <h3 style="margin-bottom: var(--space-md);">Metadata</h3>
        <div style="background: var(--color-background); padding: var(--space-md); border-radius: var(--border-radius); border: 1px solid var(--color-border);">
          <pre style="margin: 0; white-space: pre-wrap; word-wrap: break-word; font-family: monospace; font-size: 0.875rem;"><%= JSON.pretty_generate(@log.metadata) %></pre>
        </div>
      </div>
    <% end %>

    <% if @log.metadata&.dig('backtrace').present? %>
      <div>
        <h3 style="margin-bottom: var(--space-md);">Stack Trace</h3>
        <div style="background: var(--color-background); padding: var(--space-md); border-radius: var(--border-radius); border: 1px solid var(--color-border);">
          <pre style="margin: 0; white-space: pre-wrap; word-wrap: break-word; font-family: monospace; font-size: 0.875rem; color: #d32f2f;"><%= @log.metadata['backtrace'].join("\n") %></pre>
        </div>
      </div>
    <% end %>
  </div>
</div>
