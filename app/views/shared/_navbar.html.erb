<nav class="bg-white shadow-lg">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center py-4">
      <div class="flex items-center space-x-8">
        <%= link_to "Core App Template", user_signed_in? ? dashboard_path : root_path, class: "text-xl font-bold text-indigo-600" %>

        <% if user_signed_in? %>
          <%= link_to "Dashboard", dashboard_path, class: "text-gray-700 hover:text-indigo-600" %>
          <%= link_to "Subscription", new_subscription_path, class: "text-gray-700 hover:text-indigo-600" %>
          <%= link_to "Profile", profile_path, class: "text-gray-700 hover:text-indigo-600" %>
        <% end %>
      </div>

      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <% if current_user.on_trial? %>
            <span class="text-sm text-gray-600">
              Trial ends <%= time_ago_in_words(current_user.trial_ends_at) %>
            </span>
          <% end %>
          <%= link_to "Billing", profile_billing_path, class: "text-gray-700 hover:text-indigo-600" %>
          <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-gray-700 hover:text-indigo-600" %>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: "text-gray-700 hover:text-indigo-600" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>

<% if notice.present? %>
  <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4" role="alert">
    <p><%= notice %></p>
  </div>
<% end %>

<% if alert.present? %>
  <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4" role="alert">
    <p><%= alert %></p>
  </div>
<% end %>
