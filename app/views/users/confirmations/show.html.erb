<div class="auth-container">
  <div class="auth-card">
    <div style="text-align: center; margin-bottom: var(--space-xl);">
      <div style="width: 64px; height: 64px; background-color: var(--color-success-light, #D4EDDA); border-radius: 50%; margin: 0 auto var(--space-lg); display: flex; align-items: center; justify-content: center;">
        <svg width="32" height="32" fill="var(--color-success, #28A745)" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
        </svg>
      </div>
      <h1 class="auth-title">Email Confirmed!</h1>
      <p class="auth-subtitle">Your email has been successfully confirmed. You can now access all features.</p>
    </div>

    <div class="form-actions">
      <%= link_to "Go to Dashboard", dashboard_path, class: "btn btn-primary btn-lg", style: "width: 100%; text-decoration: none; display: block; text-align: center;" %>
    </div>

    <div class="auth-links">
      <%= link_to "Sign in", new_session_path(resource_name) %>
    </div>
  </div>
</div>
