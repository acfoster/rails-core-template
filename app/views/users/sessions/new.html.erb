<div class="auth-container">
  <div class="auth-card">
    <h1 class="auth-title">Sign In</h1>
    <p class="auth-subtitle">Welcome back</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input", required: true %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group-checkbox flex">
          <%= f.check_box :remember_me, class: "form-checkbox" %>
          <%= f.label :remember_me, "Remember me", class: "form-label-inline" %>
        </div>
      <% end -%>

      <div class="form-actions">
        <%= f.submit "Sign In", class: "btn btn-primary btn-lg", style: "width: 100%;" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
