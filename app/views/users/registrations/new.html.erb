<div class="auth-container">
  <div class="auth-card">
    <h1 class="auth-title">Sign Up</h1>
    <p class="auth-subtitle">Start your 5-day free trial</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input", required: true %>
        <span class="field-hint">Use 16+ characters, or 12+ with upper, lower, number, and symbol</span>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input", required: true %>
      </div>

      <div class="form-actions">
        <%= f.submit "Sign Up", class: "btn btn-primary btn-lg", style: "width: 100%;" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
